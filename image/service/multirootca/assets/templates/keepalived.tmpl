vrrp_sync_group VG_1 {
  group {
    VI_1
  }

  {{ keepalived_notify }}
}

vrrp_instance VI_1 {
  interface {{ keepalived_interface }}

  track_interface {
    {{ keepalived_interface }}
  }

  state BACKUP
  virtual_router_id 51
  priority {{ keepalived_priority }}
  nopreempt

  unicast_peer {
    {{$keepalived_confd_run_on_fleet_node_metadata_key := getenv "KEEPALIVED_CONFD_RUN_ON_FLEET_NODE_METADATA_KEY"}}
    {{$keepalived_confd_run_on_fleet_node_metadata_value := getenv "KEEPALIVED_CONFD_RUN_ON_FLEET_NODE_METADATA_VALUE"}}

    {{range $machine := lsdir "/_coreos.com/fleet/machines/"}}
    {{$machineRawData := getv (print "/_coreos.com/fleet/machines/" $machine "/object")}}
    {{$machineData := json $machineRawData}}

    {{/* iterate metadata */}}
    {{range $machineMetadataKey, $machineMetadataValue := $machineData.Metadata}}

    {{if eq (toLower $keepalived_confd_run_on_fleet_node_metadata_key) (toLower $machineMetadataKey)}}
    {{if eq (toLower $keepalived_confd_run_on_fleet_node_metadata_value) (toLower $machineMetadataValue)}}
    {{$machineData.PublicIP}}
    {{end}}
    {{end}}
    {{end}}
    {{end}}
  }

  virtual_ipaddress {
    {{ keepalived_virtual_ips }}
  }

  authentication {
    auth_type PASS
    auth_pass {{ keepalived_password }}
  }
}
